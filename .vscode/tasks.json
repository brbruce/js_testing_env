{
  // Open browser on file.  Launch using Ctrl-Shift-b (Run build task)
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run file",
      "type": "shell",
      "command": "explorer",
      "args": [
        "${file}"
      ],
      "group": "build"
    },
    {
      "label": "Run javascript",
      "type": "shell",
      "command": "node",
      "args": [
        "${file}"
      ],
      "group": "build",
      "problemMatcher": [
        "$jshint"
      ]
    },
  ]
}